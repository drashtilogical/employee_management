<!-- MAIN -->
<div class="main">
	<!-- MAIN CONTENT -->
	<% if flash[:alert] %>
		<div class="alert"><%= flash[:alert] %></div>
	<% end %>
	<div class="main-content">
		<div class="container-fluid">
			<h3 class="page-title"></h3>
			<div class="row">
				<!-- BASIC TABLE -->
				<div class="panel">
					<div class="panel-heading">
						<h3 class="panel-title">Leaves list</h3>
						<ul class="nav navbar-nav navbar-right">
							<%= link_to new_project_path, class: "btn btn-primary" do %>
								Add New project
							<% end %>
						</ul>
					</div>
					<div class="panel-body">
						<table class="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Project Name</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
							<% @projects.each do |project| %>
								<tr>
									<td><%= project.id %></td>
									<td><%= project.project_name %></td>
									<td><%= link_to edit_project_path(project.id) do %><i class='fa fa-pencil-square-o'></i><% end %>
										<%= link_to  project_path(project), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?'} do %><i class='fa fa-trash'></i><% end %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
				<!-- END BASIC TABLE -->
				<%= paginate @projects %>
				